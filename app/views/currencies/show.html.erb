<% if params[:id] %>
  <h3> Graph of <%= params[:id] %> </h3>
  <div class='days'>
    <%= link_to  "1 week", "/currencies/#{params[:id]}?range=2", remote: true %>
    <%= link_to  "Yesterday", "/currencies/#{params[:id]}?range=1", remote: true %>
    <%= link_to  "Today", "/currencies/#{params[:id]}?range=0", remote: true %>
  </div>
  <div class='graph' >
    <%= render 'chart' %>
  </div>
<% else %>
  <h3> Choose a currency please: </h3>
<% end %>

<a class='btn btn-primary' href=<%= currency_path("EUR") %> role='button'>EUR</a>
<a class='btn btn-primary' href=<%=currency_path("USD") %> role='button'>USD</a>
<a class='btn btn-primary' href=<%=currency_path("AUD") %> role='button'>AUD</a>